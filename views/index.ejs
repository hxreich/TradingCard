<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trading Card</title>
</head>
<body>
    <form action="/card" method="post">
        <label for="lastfmUsername">lastFm Username</label>
        <input id="lastfmUser" type="text" name="fmUsername">
        <label for="dropdown">Select an option:</label>
        <select name="dropdown" id="dropdown">
            <option value ="7day">7 days</option> 
            <option value ="1month">1 month</option>
            <option value ="3month">3 months</option>
            <option value ="6month">6 months</option>
            <option value ="12month">12 months</option>
        </select>
        <button type="submit">Go</button>
    </form>
    <div id="cardContainer" class="hidden">
        <%if (locals.lastfm) {%>
        <ol id="card list">
            <% lastfm.toptracks.track.forEach(tracks=> {%>
            <li><%= tracks.name %></li>    
            <ul>
                <li>Artist: <%= tracks.artist.name %></li>
                <li>Duration: <%= tracks.duration %></li>
                <li>Playcount: <%= tracks.playcount %></li>
            </ul>
            <% }) %>
        </ol>
        <%} else {%>
            <h2>Enter last.fm username and Select a TimeFrame!</h2>
            <% } %>
    </div>
</body>
</html>